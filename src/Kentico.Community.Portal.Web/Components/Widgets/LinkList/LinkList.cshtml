@model Kentico.Community.Portal.Web.Components.Widgets.LinkList.LinkListWidgetViewModel

<div xpc-preview-outline="Link List Widget" xpc-preview-outline-remove-element="true">
  @if (!string.IsNullOrWhiteSpace(Model.Label))
  {
    string slug = View.SlugHelper.GenerateSlug($"linkList-{Model.Label}");

    <h3 id="@slug" class="heading">
      @Model.Label <a title="Copy link to heading" class="heading-link" href="#@(slug)"></a>
    </h3>
  }

  <ul>
    @foreach (var link in Model.Links)
    {
      <li>
        <a href="@link.LinkContentPathOrURL"> @link.LinkContentLabel </a>
        <p><small>@link.LinkContentShortDescription</small></p>
      </li>
    }
  </ul>
</div>
