@using Kentico.Community.Portal.Web.Components.Widgets.CTAButton

@model CTAButtonWidgetViewModel

@{
    string horizontalAlignmentClass = Model.HorizontalAlignment switch
    {
        HorizontalAlignments.Center => "text-center",
        HorizontalAlignments.Left or _ => ""
    };
}

<p class="@horizontalAlignmentClass" xpc-preview-outline="CTA Widget">
    <a href="@(Model.LinkURL ?? "#")" class="btn btn-primary btn-lg px-4 d-inline ">
        @Model.Text
    </a>
</p>
