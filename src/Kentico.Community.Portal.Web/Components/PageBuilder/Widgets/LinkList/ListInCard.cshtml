@model Kentico.Community.Portal.Web.Components.PageBuilder.Widgets.LinkList.LinkListWidgetViewModel

<aside class="border rounded-3 p-4 mb-5" xpc-preview-outline="Link List Widget"
    aria-label="@(!string.IsNullOrWhiteSpace(Model.Label) ? Model.Label : "Link list")">
    @if (!string.IsNullOrWhiteSpace(Model.Label))
    {
        <header class="mb-4">
            <h4 class="mb-0">
                @Model.Label
            </h4>
        </header>
    }

    @for (int i = 0; i < Model.Links.Count; i++)
    {
        var link = Model.Links[i];
        string itemClass = i == 0
        ? "pb-3"
        : "border-top pt-3 pb-3";

        <div class="@itemClass">
            <h4 class="h4 mb-2 text-primary">
                <a href="@link.PathOrURL" id="link-@link.ContentItemGUID.ToString("N")" class="text-decoration-none"
                    aria-describedby="desc-@link.ContentItemGUID.ToString("N")">
                    @link.Title
                </a>
            </h4>

            @if (Model.ShowPublishedDate || Model.ShowAuthor)
            {
                <div class="small text-muted mb-2">
                    @if (Model.ShowPublishedDate)
                    {
                        <time datetime="@link.PublishedDate.ToString("yyyy-MM-dd")">
                            @link.PublishedDate.ToString("d", View.Culture)
                        </time>
                    }
                    @if (Model.ShowAuthor && link.MemberID > 0)
                    {
                        @if (Model.ShowPublishedDate)
                        {
                            <span> â€¢ </span>
                        }
                        @if (!string.IsNullOrWhiteSpace(link.AuthorFullName))
                        {
                            <a asp-controller="Member" asp-action="MemberDetail" asp-route-memberID="@link.MemberID"
                                class="text-decoration-none">@link.AuthorFullName</a>
                        }
                        else
                        {
                            <span>Member ID: @link.MemberID</span>
                        }
                    }
                </div>
            }

            <p class="mb-0 small text-muted" id="desc-@link.ContentItemGUID.ToString("N")">
                @link.ShortDescription
            </p>

            @if (Model.ShowDXTopics && link.DXTopics.Any())
            {
                <div class="mt-2">
                    <vc:tag-list tags="link.DXTopics" />
                </div>
            }
        </div>
    }
</aside>