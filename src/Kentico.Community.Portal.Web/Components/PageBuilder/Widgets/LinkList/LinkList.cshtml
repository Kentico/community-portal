@model Kentico.Community.Portal.Web.Components.PageBuilder.Widgets.LinkList.LinkListWidgetViewModel

<div xpc-preview-outline="Link List Widget" xpc-preview-outline-remove-element="true">
  @if (!string.IsNullOrWhiteSpace(Model.Label))
  {
    string slug = View.SlugHelper.GenerateSlug($"linkList-{Model.Label}");

    <h3 id="@slug" class="heading">
      @Model.Label <a title="Navigate to this heading" aria-label="Navigate to this heading" class="heading-link"
        href="#@(slug)"></a>
    </h3>
  }

  <ul>
    @foreach (var link in Model.Links)
    {
      <li>
        <a href="@link.PathOrURL"> @link.Title </a>
        <p><small>@link.ShortDescription</small></p>
        @if (Model.ShowPublishedDate || Model.ShowAuthor)
        {
          <p>
            <small class="text-muted">
              @if (Model.ShowPublishedDate)
              {
                <time datetime="@link.PublishedDate.ToString("yyyy-MM-dd")">
                  @link.PublishedDate.ToString("d", View.Culture)
                </time>
              }
              @if (Model.ShowAuthor && link.MemberID > 0)
              {
                @if (Model.ShowPublishedDate)
                {
                  <span> â€¢ </span>
                }
                @if (!string.IsNullOrWhiteSpace(link.AuthorFullName))
                {
                  <a asp-controller="Member" asp-action="MemberDetail"
                    asp-route-memberID="@link.MemberID">@link.AuthorFullName</a>
                }
                else
                {
                  <span>Member ID: @link.MemberID</span>
                }
              }
            </small>
          </p>
        }
        @if (Model.ShowDXTopics && link.DXTopics.Any())
        {
          <div class="mb-3">
            <vc:tag-list tags="link.DXTopics" />
          </div>
        }
      </li>
    }
  </ul>
</div>