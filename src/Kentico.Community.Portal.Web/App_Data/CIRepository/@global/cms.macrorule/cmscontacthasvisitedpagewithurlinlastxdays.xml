<?xml version="1.0" encoding="utf-8"?>
<cms.macrorule>
  <MacroRuleCondition>
    <![CDATA[{_perfectum}Contact.VisitedURL("{url}", ToInt({days}))]]>
  </MacroRuleCondition>
  <MacroRuleDescription>
    <![CDATA[Checks if the contact has visited a page with the specified URL in the last X days.]]>
  </MacroRuleDescription>
  <MacroRuleDisplayName>
    <![CDATA[Contact has visited a page with a specific URL in the last X days]]>
  </MacroRuleDisplayName>
  <MacroRuleEnabled>True</MacroRuleEnabled>
  <MacroRuleGUID>52bebbc6-9e68-42ce-87b0-0b52cb29bacd</MacroRuleGUID>
  <MacroRuleIsCustom>False</MacroRuleIsCustom>
  <MacroRuleName>CMSContactHasVisitedPageWithURLInLastXDays</MacroRuleName>
  <MacroRuleParameters>
    <form>
      <field column="_perfectum" columnprecision="0" columnsize="100" columntype="text" guid="02932083-1b1d-459d-9047-7a582f99e7cb" visible="true">
        <properties>
          <defaultvalue>__is</defaultvalue>
          <fieldcaption>select operation</fieldcaption>
        </properties>
        <settings>
          <controlname>Kentico.Administration.DropDownSelector</controlname>
          <EditText>False</EditText>
          <IsPerfectum>True</IsPerfectum>
          <Options>
<![CDATA[
__is;has
__isnot;has not
]]>
          </Options>
        </settings>
      </field>
      <field column="url" columnsize="1000" columntype="text" guid="10117572-acae-49cc-ac77-d61b0cee1c86" visible="true">
        <properties>
          <fieldcaption>enter text</fieldcaption>
        </properties>
        <settings>
          <AutoCompleteEnableCaching>False</AutoCompleteEnableCaching>
          <AutoCompleteFirstRowSelected>False</AutoCompleteFirstRowSelected>
          <AutoCompleteShowOnlyCurrentWordInCompletionListItem>False</AutoCompleteShowOnlyCurrentWordInCompletionListItem>
          <controlname>Kentico.Administration.TextInput</controlname>
          <Trim>False</Trim>
          <WatermarkText>enter text</WatermarkText>
        </settings>
      </field>
      <field allowempty="true" column="days" columntype="integer" guid="e27cefec-52f2-4ec6-87cf-d3f89b6ee229" visible="true">
        <properties>
          <fieldcaption>enter days</fieldcaption>
        </properties>
        <settings>
          <AutoCompleteEnableCaching>False</AutoCompleteEnableCaching>
          <AutoCompleteFirstRowSelected>False</AutoCompleteFirstRowSelected>
          <AutoCompleteShowOnlyCurrentWordInCompletionListItem>False</AutoCompleteShowOnlyCurrentWordInCompletionListItem>
          <controlname>Kentico.Administration.NumberInput</controlname>
          <Trim>False</Trim>
          <WatermarkText>enter number</WatermarkText>
        </settings>
      </field>
    </form>
  </MacroRuleParameters>
  <MacroRuleText>
    <![CDATA[Contact {_perfectum} visited a page with URL containing {url} in the last {days} days]]>
  </MacroRuleText>
</cms.macrorule>