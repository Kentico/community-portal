<?xml version="1.0" encoding="utf-8"?>
<cms.contenttype>
  <ClassContentTypeType>Reusable</ClassContentTypeType>
  <ClassDisplayName>Blog Post Content</ClassDisplayName>
  <ClassFormDefinition>
