@model Kentico.Community.Portal.Web.Features.Registration.RegisterViewModel

<main class="py-4 py-md-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 col-xxl-9">
                <header class="text-center mb-4">
                    <h1 class="k-dot">Register</h1>
                </header>

                <div class="row g-0 border rounded-4 overflow-hidden">
                    <div class="col-md-6">
                        <div class="p-4 p-lg-5">
                            <h2 class="mb-4">Create an account</h2>
                            <partial name="~/Features/Registration/_RegisterForm.cshtml" model="Model" />
                        </div>
                    </div>
                    
                    <div class="col-md-6 bg-light">
                        <div class="p-4 p-lg-5">
                            <h2>Already have an account?</h2>
                            <p class="mb-4">Sign in to your account to continue.</p>
                            <a asp-controller="Authentication" asp-action="Login" id="signIn" 
                                class="btn btn-outline-secondary mb-4" test-id="signIn">
                                Sign in
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
