@model Kentico.Community.Portal.Web.Features.Authentication.LoginViewModel

<form asp-route-returnUrl='@Context.Request.Query["ReturnUrl"]' method="post" hx-swap="outerHTML" hx-post
    hx-controller="Login" hx-route-returnUrl='@Context.Request.Query["ReturnUrl"]' id="signInForm" test-id="signIn">
    <div class="form-horizontal">

        <div asp-validation-summary="ModelOnly" class="text-danger validation-summary"></div>

        <div class="form-group">
            <div class="editing-form-label-cell">
                <label asp-for="UserNameOrEmail" class="control-label form-label mt-3"></label>
            </div>
            <div class="editing-form-value-cell">
                <input asp-for="UserNameOrEmail" class="form-control" test-id="userNameOrEmail">
                <span asp-validation-for="UserNameOrEmail" class="text-danger field-validation-error"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="editing-form-label-cell">
                <label asp-for="Password" class="control-label form-label mt-3"></label>
            </div>
            <div class="editing-form-value-cell">
                <input asp-for="Password" class="form-control" test-id="password">
                <span asp-validation-for="Password" class="text-danger field-validation-error"></span>
            </div>
        </div>
    </div>
    <div class="mt-3 form-check">
        <input asp-for="StaySignedIn" test-id="staySignedIn" class="form-check-input">
        <label asp-for="StaySignedIn" class="form-check-label"></label>
    </div>
    <button id="signIn" type="submit" class="btn btn-primary mt-3">@HtmlLocalizer["Sign in"]</button>
</form>